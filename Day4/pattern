
public class pattern {
    public static void main(String[] args) {
        int n=5;
        for(int i=0;i<n;i++)
        {
            System.out.println(" ".repeat(n-i-1)+(String.valueOf(i+1)+" ").repeat(i+1));
            System.out.println();
        }
        for(int i=n;i>0;i--)
        {
            System.out.println(" ".repeat(n-i)+(String.valueOf(i)+" ").repeat(i));
            System.out.println();
        }
        
    }
}
